{
  "name": "voicebank-recorder",
  "version": "1.0.0",
  "description": "跨平台音訊錄音庫，支援 Browser/Electron/Capacitor",
  "main": "dist/voicebank-recorder.js",
  "module": "dist/voicebank-recorder.esm.js",
  "unpkg": "dist/voicebank-recorder.min.js",
  "types": "dist/index.d.ts",
  
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "serve": "python3 -m http.server 8000",
    "prepare": "npm run build"
  },
  
  "keywords": [
    "audio",
    "recorder",
    "recording",
    "waveform",
    "visualization",
    "cross-platform",
    "electron",
    "capacitor",
    "web-audio-api",
    "indexeddb",
    "browser",
    "desktop",
    "mobile"
  ],
  
  "author": "VoiceBank Team",
  "license": "MIT",
  
  "repository": {
    "type": "git",
    "url": "https://github.com/cychiang-ntpu/simple-recordrtc-example.git"
  },
  
  "bugs": {
    "url": "https://github.com/cychiang-ntpu/simple-recordrtc-example/issues"
  },
  
  "homepage": "https://github.com/cychiang-ntpu/simple-recordrtc-example#readme",
  
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.9.0",
    "rollup-plugin-copy": "^3.5.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  
  "peerDependencies": {},
  
  "engines": {
    "node": ">=14.0.0"
